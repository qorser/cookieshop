<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="irs_product_code_view_form" model="ir.ui.view">
        <field name="name">irs.product.code.form</field>
        <field name="model">irs.product.code</field>
        <field name="arch" type="xml">
            <form string="iRS Product Code">
            	<sheet>
                    <group col="4">
                        <field name="name" string="iRS Code"/>
                        <field name="input_code" string="PoS Input Code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_irs_product_code_tree" model="ir.ui.view">
        <field name="name">irs.product.code.tree</field>
        <field name="model">irs.product.code</field>
        <field name="arch" type="xml">
            <tree string="RIS Account Information">
                <field name="name" string="iRS Code"/>
                <field name="input_code" string="PoS Input Code"/>
            </tree>
        </field>
    </record>

    <record id="action_irs_product_code_form" model="ir.actions.act_window">
        <field name="name">iRS Account Information</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">irs.product.code</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a iRS Product Code.
            </p>
            <p>
                Create a new one to make conversion of product inputed to iRS product code.
            </p>
        </field>
    </record>
    <menuitem
        id="menu_irs_product_code"
        name='iRS Product Code'
        action="action_irs_product_code_form"
        parent="main_menu_irs_info"
        sequence="2" />
</odoo>
