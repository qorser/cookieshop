<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_isi_pulsa" inherit_id="point_of_sale.template" xml:space="preserve">

    <!-- PosIsiPulsaWidget -->
    <t t-name="PosIsiPulsaWidget" name="Pos Isi Pulsa Widget" owl="1">
        <div class="control-button button confirm" id="pos_isi_pulsa"
             style="background-color: #6ec89b; color: #fff; width:90%;" t-on-click="renderElement">
            <i class="fa fa-bars"></i>
            Isi Pulsa
        </div>
   	</t>

    <t t-name="ProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('subpads')]" position="before">
            <br/>
            <PosIsiPulsaWidget/>
        </xpath>
    </t>

     <!-- PosBagPopupWidget -->
    <t t-name="PosIsiPulsaPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup popup-confirm-top-up">
                <p class="title" style="background-color: rgb(110,200,155); color: #fff;">Input data yang diperlukan untuk pengisian pulsa!</p>
                <div class="body">
                    <div class='div-container' >
                        <form class="isi-pulsa" >
                            <div class="input-data-top-up">
                                <div class="top-up-line">
                                    <input type="text" name="IRS_id" placeholder="ID iRS" class="top-up-input"/>
                                </div>
                                <div class="top-up-line">
                                    <input type="text" name="IRS_pin" placeholder="PIN" class="top-up-input"/>
                                </div>
                                <div class="top-up-line">
                                    <input type="text" name="product_code" placeholder="Kode Produk" class="top-up-input"/>
                                </div>
                                <div class="top-up-line">
                                    <input type="tel" name="phone" id="phone" placeholder="Nomor Tujuan" class="top-up-input"/>
                                </div>
                                <div class="top-up-line">
                                    <input type="number" name="IRS_type" placeholder="Tipe Layanan (Khusus PPOB)" class="top-up-input"/>
                                </div>                            
                            </div>
                        </form>
                    </div>
                </div>

                <div class="footer" style="background-color: rgb(110,200,155); color: #fff;position:fixed;bottom:0;">
                    <div class="button send" style="background-color: #0075AC; color: #fff;"
                         t-on-click="isi_pulsa" type="submit">
                        <i class="fa fa-paper-plane" aria-hidden="true"/>
                        Send
                        </div>
                    <div class="button cancel" style="background-color: #0075AC; color: #fff;"
                         t-on-click="go_back_screen">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>